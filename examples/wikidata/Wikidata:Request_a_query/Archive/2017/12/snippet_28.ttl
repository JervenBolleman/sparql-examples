ex:sparqlrdf/Wikidata:Request_a_query/Archive/2017/12/snippet_28.ttl a sh:SPARQLExecutable,
        sh:SPARQLSelectExecutable ;
    rdfs:comment "Sparql query from file sparqlrdf/Wikidata:Request_a_query/Archive/2017/12/snippet_28.ttl"^^rdf:HTML ;
